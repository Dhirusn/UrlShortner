@{
    ViewData["Title"] = "Home";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container-fluid px-0">
    <!-- Hero Section -->
    <section class="hero-section bg-primary text-white py-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <h1 class="display-4 fw-bold mb-4">URL Shortener, Branded Short Links & Analytics</h1>
                    <p class="lead mb-4">
                        We have a strong experience with our customers and employees to deliver the best link management solutions.
                        Transform your long URLs into powerful, trackable short links.
                    </p>
                    <div class="d-flex gap-3">
                        <a class="btn btn-light btn-lg" asp-controller="Url" asp-action="Create">Get Started Free</a>
                        <a class="btn btn-outline-light btn-lg" href="#features">Learn More</a>
                    </div>
                </div>
                <div class="col-lg-4 mt-4 mt-lg-0">
                    <div class="card text-dark">
                        <div class="card-body">
                            <h5 class="card-title">Quick Create</h5>
                            <form asp-controller="Url" asp-action="Create" method="get" class="mb-3">
                                <div class="mb-3">
                                    <input type="url" class="form-control" placeholder="Paste your long URL here" />
                                </div>
                                <button type="submit" class="btn btn-primary w-100">Shorten URL</button>
                            </form>
                            <div class="d-grid gap-2">
                                <a class="btn btn-outline-primary" asp-controller="Dashboard" asp-action="Index">Go to Dashboard</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Recent Links -->
    <section class="py-5">
        <div class="container">
            <h2 class="mb-4">Your Recent Links</h2>
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <a href="https://blog.csdn.net/ruhb2024/" class="text-truncate">https://blog.csdn.net/ruhb2024/</a>
                        <div class="btn-group">
                            <button class="btn btn-sm btn-outline-primary">Copy</button>
                            <button class="btn btn-sm btn-outline-secondary">Analytics</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Features Grid -->
    <section id="features" class="py-5 bg-light">
        <div class="container">
            <h2 class="text-center mb-5">Our Premium Plans Include:</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title text-primary">🔗 Custom Short URLs</h5>
                            <p class="card-text">Create branded short links that match your business identity and build trust with your audience.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title text-primary">📊 Link Management</h5>
                            <p class="card-text">Take full control of your links with advanced management tools, expiration dates, and editing capabilities.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title text-primary">📈 Advanced Analytics</h5>
                            <p class="card-text">Track clicks, geographic data, referral sources, and user behavior in real-time with detailed reports.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Link Shortening Section -->
    <section class="py-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h2 class="mb-4">Link Shortening Done Quick and Easy</h2>
                    <p>Our link shortener has been perfected over decades since the late 1990s. We've developed multiple ways to ensure your links work perfectly and improve user experience.</p>
                </div>
                <div class="col-lg-6">
                    <img src="https://cdn.pixabay.com/photo/2016/11/19/14/00/code-1839406_1280.jpg" alt="URL Shortening" class="img-fluid rounded shadow">
                </div>
            </div>
        </div>
    </section>

    <!-- Additional Features -->
    <section class="py-5 bg-light">
        <div class="container">
            <div class="row g-4">
                <div class="col-md-6 col-lg-3">
                    <div class="text-center p-4">
                        <div class="display-4 text-primary mb-3">🌐</div>
                        <h5>Branded Domains</h5>
                        <p class="small">Use your own domain for short links to strengthen brand recognition and trust.</p>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="text-center p-4">
                        <div class="display-4 text-primary mb-3">📱</div>
                        <h5>QR Codes</h5>
                        <p class="small">Generate QR codes for your short links to bridge offline and online marketing.</p>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="text-center p-4">
                        <div class="display-4 text-primary mb-3">🔒</div>
                        <h5>Link Security</h5>
                        <p class="small">Password protection, expiration dates, and threat detection for secure sharing.</p>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="text-center p-4">
                        <div class="display-4 text-primary mb-3">🔄</div>
                        <h5>API Access</h5>
                        <p class="small">Integrate our URL shortener directly into your applications with our robust API.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Statistics -->
    <section class="py-5 bg-primary text-white">
        <div class="container">
            <div class="text-center mb-5">
                <h2>Transforming the Digital Landscape Since '02</h2>
                <p class="lead">Creating unique global solutions for growing digital environments</p>
            </div>
            <div class="row text-center">
                <div class="col-md-4 mb-4">
                    <div class="display-3 fw-bold">23+</div>
                    <p class="h5">Years of Excellence</p>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="display-3 fw-bold">30B+</div>
                    <p class="h5">Links Created</p>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="display-3 fw-bold">100M+</div>
                    <p class="h5">Monthly Clicks</p>
                </div>
            </div>
        </div>
    </section>

    <!-- FAQ Section -->
    <section class="py-5">
        <div class="container">
            <h2 class="text-center mb-5">Frequently Asked Questions</h2>
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <div class="accordion" id="faqAccordion">
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                                    What is a URL Shortener?
                                </button>
                            </h2>
                            <div id="faq1" class="accordion-collapse collapse show" data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    A URL shortener is a tool that creates a short, easy-to-share version of long web addresses while tracking clicks and analytics.
                                </div>
                            </div>
                        </div>
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                                    How does a URL Shortener work?
                                </button>
                            </h2>
                            <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    Our system generates a unique short code for your long URL. When someone clicks the short link, they're instantly redirected to the original destination.
                                </div>
                            </div>
                        </div>
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq3">
                                    What are the benefits of using Short URLs?
                                </button>
                            </h2>
                            <div id="faq3" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    Short URLs are easier to share, look cleaner, can be branded, and provide valuable analytics about your audience and engagement.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="py-5 bg-dark text-white">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <h2>Ready for Shorter, Smarter Links?</h2>
                    <p class="lead">Transform your online presence with our powerful link management platform. Create a framework for successful campaigns that helps your business grow faster.</p>
                </div>
                <div class="col-lg-4 text-lg-end">
                    <a class="btn btn-light btn-lg" asp-controller="Url" asp-action="Create">Start For Free</a>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
 </div>

<style>
    .hero-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }

    .accordion-button:not(.collapsed) {
        background-color: #f8f9fa;
        color: #0d6efd;
    }

    footer a:hover {
        color: white !important;
        text-decoration: underline !important;
    }
</style>