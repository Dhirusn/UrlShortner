@model UrlShortener.Models.ViewModels.LoginViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Sign in";
}

<div class="container-fluid min-vh-100 d-flex align-items-center justify-content-center bg-light">
    <div class="row w-100 justify-content-center">
        <!-- Left Panel (Welcome/Branding) -->
        <div class="col-md-5 d-none d-md-flex align-items-center justify-content-center bg-primary text-white p-5 rounded-start">
            <div class="text-center">
                <h1 class="display-4 fw-bold mb-4">TINVURL</h1>
                <h2 class="mb-3">Welcome Back!</h2>
                <p class="lead">Your Links Have Missed You</p>
            </div>
        </div>

        <!-- Right Panel (Login Form) -->
        <div class="col-md-5 bg-white p-5 rounded-end shadow">
            <div class="text-center mb-4">
                <h2 class="fw-bold text-primary">Log in</h2>
                <p class="text-muted">
                    Don't have an account?
                    <a asp-controller="Auth" asp-action="Register" class="text-decoration-none">Sign Up</a>
                </p>
            </div>

            <!-- Local Login Form -->
            <form asp-action="LoginLocal" method="post" class="mb-4">
                <input type="hidden" asp-for="ReturnUrl" />

                <div class="mb-3">
                    <label class="form-label fw-semibold">Email or Username</label>
                    <input asp-for="UserNameOrEmail" class="form-control form-control-lg"
                           placeholder="Enter your email or username" />
                    <span asp-validation-for="UserNameOrEmail" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Password</label>
                    <input asp-for="Password" type="password" class="form-control form-control-lg"
                           placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="rememberMe">
                        <label class="form-check-label text-muted" for="rememberMe">
                            Keep me logged in
                        </label>
                    </div>
                    <a href="#" class="text-decoration-none text-primary small">Forgot password?</a>
                </div>

                <button type="submit" class="btn btn-primary btn-lg w-100 mb-4">Log in</button>
            </form>

            <!-- Separator -->
            <div class="d-flex align-items-center mb-4">
                <hr class="flex-grow-1">
                <span class="mx-3 text-muted">continue with</span>
                <hr class="flex-grow-1">
            </div>

            <!-- External Login Buttons -->
            <div class="d-grid gap-3">
                <a class="btn btn-outline-dark d-flex align-items-center justify-content-center"
                   asp-controller="Auth" asp-action="ExternalLogin"
                   asp-route-provider="Google"
                   asp-route-returnUrl="@Model?.ReturnUrl ?? Url.Content(" ~ /")">
                    <svg class="me-2" width="20" height="20" viewBox="0 0 24 24">
                        <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" />
                        <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" />
                        <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" />
                        <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" />
                    </svg>
                    Continue with Google
                </a>

                <a class="btn btn-outline-primary d-flex align-items-center justify-content-center"
                   asp-controller="Auth" asp-action="ExternalLogin"
                   asp-route-provider="Microsoft"
                   asp-route-returnUrl="@Model?.ReturnUrl ?? Url.Content(" ~ /")">
                    <svg class="me-2" width="20" height="20" viewBox="0 0 23 23">
                        <path fill="#f25022" d="M1 1h10v10H1z" />
                        <path fill="#00a4ef" d="M12 1h10v10H12z" />
                        <path fill="#7fba00" d="M1 12h10v10H1z" />
                        <path fill="#ffb900" d="M12 12h10v10H12z" />
                    </svg>
                    Continue with Microsoft
                </a>

                <!-- Facebook and X/Twitter can be added when configured -->
                <!--
                <a class="btn btn-outline-primary d-flex align-items-center justify-content-center">
                    <i class="fab fa-facebook me-2"></i> Continue with Facebook
                </a>
                <a class="btn btn-outline-dark d-flex align-items-center justify-content-center">
                    <i class="fab fa-twitter me-2"></i> Continue with X
                </a>
                -->
            </div>

            <!-- Anonymous Option -->
            <div class="mt-5 pt-4 border-top text-center">
                <p class="text-muted small mb-2">Or continue without signing in</p>
                <p class="text-muted small">Links will be anonymous and won't appear in a dashboard.</p>
                <a class="btn btn-link text-decoration-none" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-arrow-left me-1"></i> Return to Home
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Add Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<style>
    .min-vh-100 {
        min-height: 100vh;
    }

    .rounded-start {
        border-radius: 0.375rem 0 0 0.375rem !important;
    }

    .rounded-end {
        border-radius: 0 0.375rem 0.375rem 0 !important;
    }

    .btn-outline-dark, .btn-outline-primary {
        padding: 0.75rem 1rem;
        border-width: 2px;
    }

    .form-control-lg {
        padding: 0.75rem 1rem;
    }

    .bg-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .btn-primary {
        background-color: #4f46e5;
        border-color: #4f46e5;
    }

        .btn-primary:hover {
            background-color: #4338ca;
            border-color: #4338ca;
        }
</style>